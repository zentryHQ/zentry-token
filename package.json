{
  "name": "zentry-token",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "compile": "COMPILE_ONLY=true hardhat typechain --config hardhat.config.ts",
    "test": "hardhat test",
    "integration-test": "hardhat test --config hardhat.config.forking.ts",
    "fork-node": "hardhat node --config hardhat.config.forking.ts",
    "deploy": "hardhat ignition deploy ignition/modules/ZentryToken.ts",
    "deploy:mainnet": "hardhat ignition deploy --network mainnet --parameters ignition/parameters/chain-1.json",
    "deploy:sepolia": "hardhat ignition deploy --network sepolia --parameters ignition/parameters/chain-11155111.json",
    "deploy:mock-gf": "hardhat ignition deploy ignition/modules/TestGfToken.ts",
    "console": "hardhat console --no-compile",
    "vis": "hardhat ignition visualize",
    "verify": "hardhat verify",
    "verify:testnet": "hardhat run verify.ts --network sepolia",
    "verify:mainnet": "hardhat run verify.ts --network mainnet",
    "build-tree": "ts-node ./scripts/build-tree.ts"
  },
  "author": "",
